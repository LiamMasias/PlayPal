<%- include ('../partials/head') %>
<%- include ('../partials/loMenu') %>

<main>
  <div class="container">
    <div class="center">
        <h1>Register</h1>
        <h2>Welcome New User!</h2>
        <div class="container-fluid" style="display: grid; grid-template-columns: 1fr 1fr; grid-gap: 20px;">
          <div style="background-color: rgb(154, 153, 153); border-radius: 5%;">
            <form action="/register" method="POST" style="width: 450px; margin-right: auto; margin-left: 0;">
                <div class="form-group">
                  <label for="email">Email Address</label>
                  <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="alanturing@example.com">
                  <small id="emailHelp" class="form-text text-muted">We'll never share your data with anyone else.</small>
                </div>
                <div class="form-group">
                  <label for="username">Username</label>
                  <input type="text" class="form-control" id="username" name="username" aria-describedby="usernameHelp" placeholder="Enter Username">
                  <small id="usernameHelp" class="form-text text-muted">We Promise ;)</small>
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                  <label for="firstName">First Name</label>
                  <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Alan">
                </div>
                <div class="form-group">
                  <label for="lastName">Last Name</label>
                  <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Turing">
                </div>
                <div class="container" style="padding-top: 20px;">
                    <p>Already have an account? <a class="link" href="/login">Login</a> <button type="submit" class="btn btn-primary right">Register</button></p> 
                </div>
              </form>
            </div>
          <div id="carousel" class="carousel slide" data-ride="carousel" data-bs-ride="true" style="width: 500px; margin-left: auto; margin-right: 0;">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="/img/DALLE2.png" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="" alt="Third slide">
              </div>
            </div>
          </div>
        </div>
    </div>  
  </div>
</main>

<%- include ('../partials/footer') %>